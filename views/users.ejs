<html>
    <head>
        <title>All Users</title>
        <style>
            table, th, td {
               border: 1px solid black;
               width: 100px;
               height: 50px;
            }
         </style>
    </head>

    <body>
        <table>
            <tr>
               <th>Username</th><th>Email</th><th colspan="3">Action</th>
            </tr>
         
            <% for(let user of allUsers) { %>
             <tr>
               <td><%= user.username %></td>
               <td><%= user.email %></td>
               <td>  <a href="view/<%= user._id %>"><button>View</button></a> 
                     <a href="edit/<%= user._id %>"><button>Edit</button></a> 
                     <form action="delete/<%= user._id%>?_method=DELETE" method="POST"><button>Delete</button></form>
                </td>


                <!--<td>  <form action="view/<%= user._id%>" method="GET"><button>View</button></form></td>
                <td>  <form action="edit/<%= user._id%>?_method=PUT" method="POST"><button>Edit</button></form></td>
                <td>  <form action="delete/<%= user._id%>?_method=DELETE" method="POST"><button>Delete</button></form></td>-->
               
             </tr>    
            <% } %>
         </table>
    </body>
</html>